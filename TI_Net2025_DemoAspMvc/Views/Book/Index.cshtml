@using TI_Net2025_DemoAspMvc.Models.Dtos

@model List<BookIndexDto>

<h1>Liste de livre</h1>

<a class="btn btn-primary"
   asp-controller="Book"
   asp-action="Add">Add book</a>

@if (Model.Count == 0)
{
    <h2>Liste vide</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m[0].Title)</th>
                <th>@Html.DisplayNameFor(m => m[0].Author)</th>
                <th>@Html.DisplayNameFor(m => m[0].Release)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookIndexDto book in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => book.Title)</td>
                    <td>@Html.DisplayFor(m => book.Author)</td>
                    <td>@Html.DisplayFor(m => book.Release)</td>
                    <td>
                        <a class="btn btn-primary"
                           asp-controller="Book"
                           asp-action="Details"
                           asp-route-isbn="@book.Isbn">Détails</a>
                        <a class="btn btn-warning"
                           asp-controller="Book"
                           asp-action="Edit"
                           asp-route-isbn="@book.Isbn">Modifier</a>
                        <form class="d-inline"
                              method="post"
                              asp-controller="Book"
                              asp-action="Remove"
                              asp-route-isbn="@book.Isbn">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}